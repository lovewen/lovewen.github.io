<script src="https://code.jquery.com/jquery.js"></script>
<!-- 包括所有已编译的插件 -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<script>
//禁止右键和f12
    var arr = [123, 17, 18, 85];
    document.oncontextmenu = new Function("event.returnValue=false;"), //禁用右键
        document.onselectstart = new Function("event.returnValue=false;"), //禁用选中
        window.onkeydown = function(e) {
            var code = e.keyCode;
            if (arr.indexOf(code) > -1) {
                console.log("中招了", code);
                e.preventDefault();
            }
        }, window.oncontextmenu = function(e) {
            e.preventDefault();
        }
        //鼠标点击特效
    var texts = 0;
    jQuery(document).ready(function($) {
        $("body").click(function(e) {
            var array = new Array("欢迎来到硕硕❤雯雯之家", "硕硕爱雯雯", "小雯子之家", "♪(* ´з)(ε｀ *)啵~♪", "永远爱小雯子", "快来亲硕硕", "(* ⁰̷̴͈꒨⁰̷̴͈)=͟͟͞͞➳", "(∗ᵒ̶̶̷̀ω˂̶́∗)੭₎₎̊₊♡", "我的小雯子公主", "我爱小雯子", "爱惨小雯子了", );
            //创建要显示的文字
            var love = $("<span></span>").text(array[texts]);
            texts = (texts + 1) % array.length;
            //获取鼠标点击坐标
            var x = e.pageX,
                y = e.pageY;
            love.css({
                "z-index": Infinity,
                "top": y - 15,
                "left": x,
                "position": "absolute",
                "font-weight": "bold",
                "font-size": "2em",
                //随机获取字体颜色
                "color": "rgb(" + ~~(255 * Math.random()) + "," + ~~(255 * Math.random()) + "," + ~~(255 * Math.random()) + ")"
            });
            $("body").append(love);
            love.animate({
                    "top": y - 180,
                    "opacity": 0
                },
                3500,
                function() {
                    love.remove();
                });
        });
    });
</script>

